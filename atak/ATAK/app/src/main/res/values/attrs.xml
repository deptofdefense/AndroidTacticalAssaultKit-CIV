<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlusMinusWidget">
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="startValue" format="integer" />
    </declare-styleable>

    <declare-styleable name="ThemedSpinner">
        <attr name="layout" format="reference"/>
    </declare-styleable>

    <declare-styleable name="TileButtonView">
        <attr name="text" format="string"/>
        <attr name="icon" format="reference"/>
        <attr name="iconSize" format="dimension"/>
        <attr name="maxTextSize" format="dimension"/>
        <attr name="minTextSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="HashtagEditText">
        <attr name="mixedInput" format="boolean"/>
        <attr name="clickableTags" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RemarksLayout">
        <attr name="labelVisibility" format="string"/>
        <attr name="dialogHint" format="string"/>
        <attr name="android:hint" format="string"/>
        <attr name="android:contentDescription" format="string"/>
        <attr name="android:minLines" format="integer"/>
        <attr name="android:maxLines" format="integer"/>
        <attr name="android:ellipsize" format="integer"/>
        <attr name="android:gravity" format="integer"/>
    </declare-styleable>
    
    <declare-styleable name="TakDrawableStates">
        <attr name="state_error" format="boolean" />
        <attr name="state_entered" format="boolean" />
        <attr name="state_expanded" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TakButton">
        <attr name="buttonText" format="string" />
        <attr name="buttonImage" format="reference" />
        <attr name="buttonImageTint" format="color" />
    </declare-styleable>

    <declare-styleable name="ColorPalette">
        <attr name="layoutId" format="reference"/>
        <attr name="showAlpha" format="boolean"/>
        <attr name="showFill" format="boolean"/>
    </declare-styleable>
</resources>