<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_enabled="true" android:state_pressed="true" app:state_error="true">
        <inset android:insetLeft="-2dp" android:insetTop="-2dp">
            <shape android:shape="rectangle">
                <corners android:bottomRightRadius="@dimen/alert_dialog_corner_radius" />
                <solid android:color="@color/taupe" />
                <stroke android:width="1dp" android:color="@color/black" />
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" app:state_error="true">
        <inset android:insetLeft="-2dp" android:insetTop="-2dp">
            <shape android:shape="rectangle">
                <corners android:bottomRightRadius="@dimen/alert_dialog_corner_radius" />
                <solid android:color="@color/deep_carmine_pink" />
                <stroke android:width="1dp" android:color="@color/black" />
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:insetLeft="-2dp" android:insetTop="-2dp">
            <shape android:shape="rectangle">
                <corners android:bottomRightRadius="@dimen/alert_dialog_corner_radius" />
                <solid android:color="@color/taupe" />
                <stroke android:width="1dp" android:color="@color/black" />
            </shape>
        </inset>
    </item>
    <item>
        <inset android:insetLeft="-2dp" android:insetTop="-2dp">
            <shape android:shape="rectangle">
                <corners android:bottomRightRadius="@dimen/alert_dialog_corner_radius" />
                <solid android:color="@color/pastel_gray" />
                <stroke android:width="1dp" android:color="@color/black" />
            </shape>
        </inset>
    </item>
</selector>