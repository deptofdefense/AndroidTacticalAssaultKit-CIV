<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black" />
                </shape>
            </item>

            <item android:bottom="-2dp" android:right="-4dp" android:top="-4dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="3dp" android:color="@color/pastel_gray" />
                </shape>
            </item>

            <item
                android:bottom="10dp"
                android:drawable="@drawable/dropdown_selector"
                android:gravity="end|center_vertical"
                android:right="10dp"
                android:top="10dp" />
        </layer-list>
    </item>
</selector>