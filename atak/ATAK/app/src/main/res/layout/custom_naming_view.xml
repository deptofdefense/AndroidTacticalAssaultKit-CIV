<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px" />

        <EditText
            android:id="@+id/prefix_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".45"
            android:inputType="textNoSuggestions"
            android:hint="@string/point_dropper_text10"
            android:textSize="@dimen/draper_title_font"/>

        <EditText
            android:id="@+id/startIndex_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:inputType="number"
            android:maxLength="5"
            android:hint="@string/point_dropper_text11"
            android:textSize="@dimen/draper_title_font"/>

        <ImageButton
            android:id="@+id/swapButton"
            style="@style/darkButton"
            android:layout_gravity="center_vertical"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/swap_12"
            android:scaleType="centerInside"
            android:padding="5dp"/>


        <ImageButton
            android:id="@+id/resetButton"
            style="@style/darkButton"
            android:layout_gravity="center_vertical"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_menu_delete"
            android:scaleType="centerInside"
            android:padding="@dimen/auto_space_big"/>
    </LinearLayout>

    <View
        android:minHeight="1dp"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:visibility="visible"
        android:background="@android:color/darker_gray" >
    </View>
</LinearLayout>
