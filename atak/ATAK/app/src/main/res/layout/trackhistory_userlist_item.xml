<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:background="@drawable/trackhistory_list_item_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView android:id="@+id/trackhistory_userlist_item_icon"
                   android:layout_width="24dip"
                   android:layout_height="24dip"
                   android:layout_marginEnd="5dip"
                   android:src="@drawable/ic_self"/>

        <TextView
            android:id="@+id/trackhistory_userlist_item_callsign"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:text="@string/callsign"
            android:clickable="false"/>

        <TextView
            android:id="@+id/trackhistory_userlist_item_numTracks"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/_8_tracks"
            android:maxLines="1"
            android:clickable="false"/>

    </LinearLayout>

</LinearLayout>
