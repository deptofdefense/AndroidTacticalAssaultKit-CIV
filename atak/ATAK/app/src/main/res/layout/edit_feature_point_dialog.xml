<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/auto_margin2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/nav_prev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_left"
            style="@style/darkButton"/>

        <TextView
            android:id="@+id/editFeaturePointDialogCurrentIconsetName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/iconset"
            android:textSize="@dimen/draper_large_font"
            android:textColor="#FFF"/>

        <ImageButton
            android:id="@+id/nav_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_right"
            style="@style/darkButton"/>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/editFeaturePointDialogViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/auto_margin"/>
</LinearLayout>