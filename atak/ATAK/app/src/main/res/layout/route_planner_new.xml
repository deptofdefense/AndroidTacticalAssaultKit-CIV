<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.routes.RoutePlannerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.atakmap.android.gui.EditText
                android:id="@+id/route_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:hint="@string/route_name"
                android:inputType="text|textCapWords|textNoSuggestions"
                android:contentDescription="@string/route_name"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            <Button
                android:id="@+id/start_nav"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_marginStart="2dp"
                android:text="@string/go_caps"
                android:enabled="true"
                style="@style/darkButton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false">
            <ImageButton
                android:id="@+id/route_color"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="6dp"
                android:src="@drawable/color_rectangle"
                style="@style/darkButton"/>

            <LinearLayout
                android:id="@+id/route_type_btn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:padding="6dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                style="@style/darkButton">
                <ImageView
                    android:id="@+id/route_type_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_route"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:id="@+id/route_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/primary"
                    android:textColor="#FFF"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/start_route_planner"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_marginStart="2dp"
                android:padding="4dp"
                android:src="@drawable/ic_route_planner"
                android:enabled="true"
                style="@style/darkButton"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333"/>

    <ListView
        android:id="@+id/control_points_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333"/>

    <com.atakmap.android.hashtags.view.RemarksLayout
        android:id="@+id/remarksLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- This is where extra views go from tools or plugins -->
    <com.atakmap.android.cotdetails.extras.ExtraDetailsLayout
        android:id="@+id/extrasLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/auto_margin"
        android:paddingBottom="@dimen/auto_margin"
        android:gravity="center_vertical|end">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/share_route"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/send_square"
            style="@style/darkButton"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/export_route"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/export_menu_default"
            style="@style/darkButton"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/edit_route"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/edit"
            style="@style/darkButton"/>
        <View
            android:id="@+id/edit_route_spacer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/route_elevation_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_overlay_dted"
            style="@style/darkButton"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/route_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:src="@drawable/ic_menu_settings"
            style="@style/darkButton"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</com.atakmap.android.routes.RoutePlannerView>
