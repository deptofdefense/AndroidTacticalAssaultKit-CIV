<menu buttonRadius='65' buttonSpan='40' buttonWidth='90' buttonBg='bgs/button.xml'>
    
    <button angle='-90' icon='icons/delete.png'
            onClick='actions/remove.xml'
            disabled='!{${removable}}' />

    <button icon='icons/details.png'
            onClick='actions/rab_drop_down.xml' />

    <button icon='icons/distance_lock.png'
            onClick='actions/rab_distance_lock.xml'
            selected='${distanceLocked}' />

    <button icon='icons/drab_pin.png'
            onClick='actions/drab_pin.xml' />

    <button icon='icons/kmm.png'
            submenu='menus/randb_range_submenu.xml'
            prefKey='rab_rng_units_pref'
            disableSwap='true'/>

    <button icon='icons/degs_m.png'
            submenu='menus/randb_bearing_submenu.xml'
            prefKey1='rab_brg_units_pref'
            prefKey2='rab_north_ref_pref'
            disableSwap='true'/>

    <button icon='icons/right_angle.png'
            prefKey='rab_dist_slant_range'
            prefValue='slantrange'
            onClick='actions/toggle_slant_range.xml'/>

    <button icon='icons/edit2.png'
            disabled='${disable_polar}'
            onClick='actions/polarCoords.xml'/>

    <button icon='icons/clamp.png'
            onClick='actions/clamp_toggle.xml'
            selected='${clampedToGround}'/>


</menu>
