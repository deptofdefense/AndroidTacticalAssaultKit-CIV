<menu buttonRadius='65' buttonSpan='45' buttonWidth='90' buttonBg='bgs/button.xml'>

    <button angle='-90'
            icon='icons/delete.png'
            onClick='actions/remove.xml'
            disabled='!{${removable}}' />

    <button icon='icons/details.png'
            onClick='actions/showdetails_spotmap.xml' />

    <button icon='icons/show_label.png'
        onClick='actions/toggle_label.xml'
        selected='!{${hideLabel}}' />
              
    <button icon='icons/blast_rings.png'
            dependsOnCapability='capability.weapons'
            onClick='actions/dangerclose.xml' />

    <button onClick='actions/9line_spi.xml'
            dependsOnCapability='capability.fires'
            icon='icons/nineline.png'/>
            
    <button icon='icons/green_flag_radial.png'
            onClick='actions/startgoto.xml'
            selected='${hounding}'/>
          
    <button icon='icons/pairing_line.png'
            onClick='actions/pairingline.xml'/>
            
    <button icon='icons/move.png'
            submenu='menus/mgrs_entry_submenu.xml'
            disableSwap='true'
            disableIconSwap='true'
            onClick='actions/move.xml'
            disabled='!{${movable}}' />

</menu>
