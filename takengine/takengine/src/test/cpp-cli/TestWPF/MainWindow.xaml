<Window x:Name="MapWindow" x:Class="TestWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="540" Width="960">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="168*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="MapSurfaceImage" Margin="0,0,0,0.5" SizeChanged="MapSurfaceImage_SizeChanged" MouseWheel="MapSurfaceImage_MouseWheel" MouseMove="MapSurfaceImage_MouseMove" MouseLeftButtonDown="MapSurfaceImage_MouseLeftButtonDown" MouseLeftButtonUp="MapSurfaceImage_MouseLeftButtonUp" Grid.Column="1" Stretch="Fill" MouseRightButtonUp="MapSurfaceImage_MouseRightButtonUp" MouseRightButtonDown="MapSurfaceImage_MouseRightButtonDown"/>
        <TreeView x:Name="LayersTree" Margin="0,0,10,0.5"/>

    </Grid>
</Window>
